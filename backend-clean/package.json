{
  "name": "planner-pro-backend-clean",
  "version": "1.0.0",
  "description": "Backend limpo para Planner Pro",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:local": "cp env.local.example .env && npm run db:setup && npm run dev",
    "build": "prisma generate",
    "postinstall": "prisma generate",
    "setup": "node setup-database.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:setup": "prisma generate && prisma db push",
    "db:reset": "prisma migrate reset --force && prisma db push",
    "local:setup": "cp env.local.example .env && npm install && npm run db:setup"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "prisma": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "googleapis": "^156.0.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.8.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "planner",
    "backend",
    "api"
  ],
  "author": "Planner Pro",
  "license": "MIT"
}
